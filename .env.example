# AI Model API Keys (Required)
OPENAI_API_KEY=your-openai-api-key-here
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Optional: Alternative AI Model
# GOOGLE_API_KEY=your-gemini-api-key-here

# Application Configuration
APP_ENV=development
LOG_LEVEL=info
DEBUG=true

# Database Configuration (Local Development)
# Use absolute path for local development, Docker path for production
DATABASE_URL=sqlite+aiosqlite:///Users/YOUR_USERNAME/interviewer/interviewer.db

# Security
SECRET_KEY=your-secret-key-here  # Generate with: openssl rand -hex 32
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS Configuration
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Audio Configuration
MAX_AUDIO_SIZE_MB=50
AUDIO_TIMEOUT_SECONDS=300

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-api-key-here 